{
  "name": "Seb's Dev Container",
  "dockerFile": "../Dockerfile",
  "remoteEnv": {},
  "mounts": [
    "type=bind,source=/var/run/docker.sock,target=/var/run/docker-host.sock",
  ],
  "settings": {
    "[shellscript]": {
      "files.eol": "\n",
      "editor.tabSize": 4,
    },
    "[python]": {
      "editor.formatOnSave": true,
    },
    "editor.renderIndentGuides": true,
    "editor.formatOnSave": false,
  },
  "extensions": [],
  "forwardPorts": [],
  "postCreateCommand": "",
  "remoteUser": "vscode",
  "containerUser": "vscode",
  "overrideCommand": false,
  "runArgs": [
    "--init" // make /tini available as an entrypoint
  ],
  // "runArgs": [
  //   "--env-file",
  //   ".env",
  // ],
}